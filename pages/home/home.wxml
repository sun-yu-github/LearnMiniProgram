<!--pages/home/home.wxml-->
<text>pages/home/home.wxml</text>
<!-- 基本使用 -->
<text>Hello World</text>
<text>你好小程序\n</text>


<!-- 2、selectable:true -->
<!-- 默认情况下text中的文本长按是不能选中的 -->
<text selectable="{{true}}">Hello World</text>
<text selectable>Hello World</text>

<!-- 3、space：决定文本空格的大小 -->
<!-- ensp ：半个中文字符大小 -->
<!-- emsp：一个中文大小 -->
<text>Hello World\n</text>
<text space="nbsp">Hello World\n</text>
<text space="ensp">Hello World\n</text>
<text space="emsp">Hello World\n</text>


<!-- 4、decode属性 ：是否解码文本 -->
<text decode>5 &gt; 3</text>

